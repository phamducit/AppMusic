<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="3dp"
        android:id="@+id/relativechudetheloai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="CHỦ ĐỀ VÀ THỂ LOẠI"
            android:id="@+id/tvtitlechudetheloai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="italic"
            android:id="@+id/tvxemthemchudevatheloai"
            android:layout_alignParentRight="true"
            android:textColor="#ff7002"
            android:textSize="18sp"
            android:text="Xem Thêm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <HorizontalScrollView
        android:scrollbars="none"
        android:id="@+id/horizontalscrollview"
        android:layout_below="@id/relativechudetheloai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </HorizontalScrollView>
</RelativeLayout>